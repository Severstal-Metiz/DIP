{
	"manifest_version": 3,
	"version": "0.1",
	"name": "Вредсмертный",
	"description": "Твой не заменимый помошник sqp.mobileapp.severstal.com",
	
	"action": {
		"default_icon": {
		  "32" : "32x32.png"
		},
		"default_popup" : "popup.html"
	},
	"icons": {
		"32" : "32x32.png",
		"128" : "128x128.png"
	},
	
	"permissions": ["activeTab", "scripting", "storage" ],
	
	"content_scripts": [
		{
			"matches": [ "https://sqp.mobileapp.severstal.com/","file:///*" ],
			"css": ["highlighter.css"],
			"js": [ "highlighter.js", "popup.js" ],
			"run_at": "document_end"
		}
	],
	
	"background": {
    "service_worker": "background.js"
	}
}